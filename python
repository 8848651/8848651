b=list(reversed(a))
if b[0]=='g'and b[1]=='n'and b[2]=='i':
    del(b[0])
    del(b[0])
    del(b[0])
if b[0] == 'y' and b[1] == 'l':
    del (b[0])
    del (b[0])
if b[0] == 'r' and b[1] == 'e':
    del (b[0])
    del (b[0])
c=list(reversed(b))
str=''.join(c)
print(str)
